<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="extension_giftcard_code_listing_data_source" xsi:type="string">GiftCardVirtualType</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="GiftCardVirtualType" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">giftcard_code</argument>
            <argument name="resourceModel" xsi:type="string">Extension\GiftCard\Model\ResourceModel\GiftCard</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Checkout\Block\Cart\Coupon">
        <plugin name="check_giftcard_applied"
                type="Extension\GiftCard\Plugin\CheckGiftCardApplied"/>
    </type>

    <preference for="Extension\GiftCard\Api\GiftCardRepositoryInterface" type="Extension\GiftCard\Model\GiftCardRepository"/>
    <preference for="Extension\GiftCard\Api\Data\GiftCardInterface" type="Extension\GiftCard\Model\GiftCard"/>
    <preference for="Extension\GiftCard\Api\Data\GiftCardSearchResultInterface" type="Magento\Framework\Api\SearchResults"/>
</config>

